<article id="hdd">
  <table class="info">
    <tr>
      <th>
        <!-- Image card "ramWhat"-->
        <div class="demo-card-image mdl-card mdl-shadow--2dp" id="hddWhatImg">
          <div class="mdl-card__title mdl-card--expand"></div>
          <div class="mdl-card__actions">
            <span class="demo-card-image__filename">HDD란?</span>
          </div>
        </div>
        <!-- <button onclick="dim();">Dim</button> -->
      </th>
      <th>
        <!-- Image card "hddPoint"-->
        <div class="demo-card-image mdl-card mdl-shadow--2dp" id="hddPointImg">
          <div class="mdl-card__title mdl-card--expand"></div>
          <div class="mdl-card__actions">
            <span class="demo-card-image__filename">HDD주요 포인트!</span>
          </div>
        </div>
      </th>
    </tr>
  </table>
  <!-- Square card -->
  <hr>
  <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
    <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">이름</th>
      <th class="mdl-data-table__cell--non-numeric">제조사</th>
      <th class="mdl-data-table__cell--non-numeric">메모리 용량</th>
      <th class="mdl-data-table__cell--non-numeric">제품 분류</th>
      <th class="mdl-data-table__cell--non-numeric">동작 속도</th>
    </tr>
    </thead>
    <tbody>
      <% for(var i = 0 ; i < hddList.length ; i++) {%>
        <tr>
          <td class="mdl-data-table__cell--non-numeric"><%= hddList[i].name %></td>
          <td class="mdl-data-table__cell--non-numeric"><%= hddList[i].company %></td>
          <td class="mdl-data-table__cell--non-numeric"><%= hddList[i].details.capacity %></td>
          <td class="mdl-data-table__cell--non-numeric"><%= hddList[i].details.classify %></td>
          <td class="mdl-data-table__cell--non-numeric"><%= hddList[i].details.speed %></td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <hr><br>


  <div class="demo-card-square mdl-card mdl-shadow--2dp" id='hddWhatInfo' style="overflow:scroll; height:70%;">
    <div class="mdl-card__supporting-text" >
        <% for(var i=0; i<informationsList.length; i++) {%>
          <% if(informationsList[i].name=="hddWhat") { %>
            <h3><%= informationsList[i].title %></h3>
            <p><%= informationsList[i].contents %></p>
          <% } %>
        <% } %>
    </div>
  </div>


  <div class="demo-card-square mdl-card mdl-shadow--2dp" id='hddPointInfo' style="overflow:scroll; height:70%;">
    <!-- <div id="" style="overflow:scroll; height:400px;"> -->
    <div class="mdl-card__supporting-text">
        <% for(var i=0; i<informationsList.length; i++) {%>
          <% if(informationsList[i].name=="hddPoint") { %>
            <h3><%= informationsList[i].title %></h3>
            <p><%= informationsList[i].contents %></p>
          <% } %>
        <% } %>
    </div>
  </div>

</article>
